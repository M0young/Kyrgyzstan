<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="visitDAO">
    
    <!-- 전체 로그 조회 -->
    <select id="selectAllVisit" resultType="VisitDTO">
        SELECT 
            ul.user_no,
            u.user_nm AS user_nm,
            ul.msg,
            ul.ip,
            TO_CHAR(ul.reg_dt, 'YYYY-MM-DD HH24:MI:SS') AS reg_dt
        FROM 
            klums.user_log ul
        LEFT JOIN 
            klums."user" u ON ul.user_no = u.user_no
        WHERE
            u.del_yn = 'N'
    </select>
    
    <!-- 검색 조건에 따른 로그 조회 -->
    <select id="selectVisitBySearch" parameterType="map" resultType="VisitDTO">
        SELECT 
            ul.user_no,
            u.user_nm AS user_nm,
            ul.msg,
            ul.ip,
            TO_CHAR(ul.reg_dt, 'YYYY-MM-DD HH24:MI:SS') AS reg_dt
        FROM 
            klums.user_log ul
        LEFT JOIN 
            klums."user" u ON ul.user_no = u.user_no
        WHERE 1=1
        <if test="query != null and query != ''">
            AND (u.user_nm ILIKE #{query} OR ul.msg ILIKE #{query} OR ul.ip ILIKE #{query})
        </if>
        ORDER BY ul.reg_dt DESC
    </select>
    
    <!-- 전체 로그 수 조회 (검색 포함) -->
    <select id="countVisit" parameterType="map" resultType="int">
        SELECT COUNT(*)
        FROM klums.user_log ul
        LEFT JOIN klums."user" u ON ul.user_no = u.user_no
        WHERE u.del_yn = 'N'
        <if test="query != null and query != ''">
            AND (u.user_nm ILIKE #{query} OR ul.msg ILIKE #{query} OR ul.ip ILIKE #{query})
        </if>
    </select>
    
    <!-- 페이징된 로그 조회 -->
    <select id="selectPagedVisit" parameterType="map" resultType="VisitDTO">
        SELECT 
            ul.user_no,
            u.user_nm AS user_nm,
            ul.msg,
            ul.ip,
            TO_CHAR(ul.reg_dt, 'YYYY-MM-DD HH24:MI:SS') AS reg_dt
        FROM 
            klums.user_log ul
        LEFT JOIN 
            klums."user" u ON ul.user_no = u.user_no
        WHERE u.del_yn = 'N'
        <if test="query != null and query != ''">
            AND (u.user_nm ILIKE #{query} OR ul.msg ILIKE #{query} OR ul.ip ILIKE #{query})
        </if>
        ORDER BY ul.reg_dt DESC
        LIMIT #{size} OFFSET #{offset}
    </select>
    
</mapper>
