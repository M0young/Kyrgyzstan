@charset "UTF-8";

@media (max-width: 768px) {
    .navbar-brand {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        padding: 0 0.5rem;
    }
    .navbar-nav .nav-item {
        padding: 0 0.25rem !important;
    }
    .nav-link {
        padding: 0.3rem !important;
    }
    .nav-link-icon {
        width: 24px;  /* 원하는 크기로 설정 */
        height: 24px;
    }
}

.language-selector .navbar {
	background: none !important;
    box-shadow: none !important;
    user-select: none !important;
}

.container-custom {
	max-width: 100% !important;
}

.navbar, .navbar-brand {
	user-select: none !important;
}

#verificationCodeContainer {
	display: none;
}

.icon {
	--tblr-icon-size: 1.5rem !important;
}

.dropdown-item.active {
  background-color: rgba(32, 107, 196, 0.06);
}

.dropdown-item {
  padding: .5rem 1rem;
  min-height: 40px;
  font-size: .875rem;
}

.avatar.avatar-xs {
  width: 1.5rem;
  height: 1.5rem;
  font-size: .75rem;
  border-radius: 4px;
}

.text-green {
  color: #2fb344;
}

.nav-link.active .nav-link-icon, .nav-link.active .nav-link-title {
    color: var(--tblr-primary);
    font-weight: 500;
}

/* 네비게이션 링크 기본 스타일 */
.nav-link {
    position: relative;
    transition: all 0.2s ease-in-out;
}

/* hover 효과 */
.nav-link:hover {
    transform: translateY(-1px);
}

/* hover시 아이콘과 텍스트 색상 변경 */
.nav-link:hover .nav-link-icon,
.nav-link:hover .nav-link-title {
    color: var(--tblr-primary);
}

/* active 상태 */
.nav-link.active {
    background-color: rgba(32, 107, 196, 0.04);
}

/* 오른쪽 유틸리티 메뉴 hover 효과 */
.navbar-nav.flex-row.order-md-last .nav-link:hover {
    transform: translateY(-1px);
}

/* 드롭다운 아이템 hover 효과 */
.dropdown-item {
    transition: all 0.2s ease-in-out;
}

.dropdown-item:hover {
    transform: translateX(2px);
}

/* =====================================================
    Header - common
======================================================*/
header.navbar {
	z-index: 9999;
}


.header-center {
	width: 450px;
	margin-left: 21%;
	margin-right: 21%;
}

.header-menu {
	top: calc(3rem + 1px);
	right: 0px;
}

/* =====================================================
    Contact - menu
======================================================*/
#contactMenu {
	--tblr-dropdown-padding-y: 0 !important;
	z-index: 1;
}

.header-menu .card {
    border: none;
    width: 400px;
}

.header-menu textarea {
    min-height: 150px;
    max-height: 350px;
}
